# use images from rocker
FROM rocker/rstudio

# set R version
ENV R_VER=4.3.2

# install ubuntu packages 
RUN apt-get update
RUN apt-get install -y \
    bash \
    patch \
    libmagick++-dev \
    libhdf5-dev \
    libcurl4-openssl-dev \
    libssl-dev \
    libpng-dev \
    libxt-dev \
    zlib1g-dev \
    libbz2-dev \
    liblzma-dev \
    libglpk40 \
    libgit2-dev \
    libgsl27 \
    libgsl-dev \
    python3-pip

# install R packages
RUN Rscript -e "install.packages(c('BiocManager', 'devtools'))"
RUN Rscript -e "install.packages(c('remotes', 'curl', 'RCurl', 'magick', 'openssl', 'igraph', 'leiden', 'httr', 'plotly', 'circlize', 'ggalluvial', 'ggbeeswarm', 'ggpubr', 'ggrepel', 'harmony', 'jsonlite', 'languageserver', 'Matrix', 'patchwork', 'RColorBrewer', 'reticulate', 'RSQLite', 'rstatix', 'scales', 'Seurat', 'SeuratObject', 'Signac', 'SoupX', 'UpSetR', 'tidyverse', 'hdf5r', 'fastTopics'), dependencies = TRUE)"
RUN Rscript -e "BiocManager::install(c('BiocParallel', 'BSgenome.Hsapiens.UCSC.hg38', 'chromVAR', 'ComplexHeatmap', 'DESeq2', 'EnsDb.Hsapiens.v86', 'HCATonsilData', 'JASPAR2024', 'limma', 'JASPAR2020', 'biovizBase', 'TFBSTools', 'edgeR', 'scater'))" 
RUN Rscript -e "remotes::install_github('chris-mcginnis-ucsf/DoubletFinder')"
RUN Rscript -e "remotes::install_github('mojaveazure/seurat-disk')"
RUN Rscript -e "remotes::install_github('morinlab/GAMBLR.data')"
RUN Rscript -e "remotes::install_github('massonix/SLOcatoR')"
RUN Rscript -e "remotes::install_github('satijalab/azimuth', ref = 'master')"
RUN Rscript -e "remotes::install_github('stuart-lab/signac', ref = 'develop')"

# install python packages
RUN pip install \
    leidenalg \
    numpy \
    pandas